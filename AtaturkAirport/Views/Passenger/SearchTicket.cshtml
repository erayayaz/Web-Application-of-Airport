@model AtaturkAirport.Models.PassengerInfo

@{
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Search Ticket</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Passenger</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.TCKN, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TCKN, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TCKN, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Search" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    <div>
        @if (ViewBag.TCKN != null)
        {

            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">TCKN</th>
                        <th scope="col">Name</th>
                        <th scope="col">Gender</th>
                        <th scope="col">Ticket ID</th>
                        <th scope="col">Flight ID</th>
                        <th scope="col">Type</th>
                        <th scope="col">Price</th>
                        <th scope="col">Luggage Weight</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@ViewBag.TCKN</td>
                        <td>@ViewBag.Name</td>
                        <td>@ViewBag.gender</td>
                        <td>@ViewBag.TicketID </td>
                        <td>@ViewBag.FlightID</td>
                        <td>@ViewBag.type</td>
                        <td>@ViewBag.price</td>
                        <td>@ViewBag.luggageWeight</td>

                    </tr>

            </table>
        }
    </div>

</body>
</html>
